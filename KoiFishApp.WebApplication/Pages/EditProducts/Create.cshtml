@page
@model KoiFishApp.WebApplication.Pages.QLGH.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div style="text-align: center; margin-top: 20px;">
    <h1 style="font-size: 2.5rem; font-weight: bold; color: #007bff;">Thêm sản phẩm mới</h1>
    <p style="font-size: 1.2rem; color: #666;">Vui lòng điền đầy đủ thông tin để thêm sản phẩm.</p>
</div>

<div style="max-width: 600px; margin: 30px auto; padding: 20px; border: 1px solid #dee2e6; border-radius: 10px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); background-color: #f8f9fa;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 15px;"></div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label asp-for="Product.ProductId" class="control-label" style="font-weight: bold;">ID Sản phẩm</label>
            <input asp-for="Product.ProductId" class="form-control" placeholder="Nhập ID sản phẩm" style="padding: 10px; border-radius: 5px;" />
            <span asp-validation-for="Product.ProductId" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label asp-for="Product.Name" class="control-label" style="font-weight: bold;">Tên sản phẩm</label>
            <input asp-for="Product.Name" class="form-control" placeholder="Nhập tên sản phẩm" style="padding: 10px; border-radius: 5px;" />
            <span asp-validation-for="Product.Name" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label asp-for="Product.Price" class="control-label" style="font-weight: bold;">Giá</label>
            <input asp-for="Product.Price" class="form-control" placeholder="Nhập giá sản phẩm" style="padding: 10px; border-radius: 5px;" />
            <span asp-validation-for="Product.Price" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label asp-for="Product.Quantity" class="control-label" style="font-weight: bold;">Số lượng</label>
            <input asp-for="Product.Quantity" class="form-control" placeholder="Nhập số lượng sản phẩm" style="padding: 10px; border-radius: 5px;" />
            <span asp-validation-for="Product.Quantity" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label asp-for="Product.Description" class="control-label" style="font-weight: bold;">Mô tả</label>
            <textarea asp-for="Product.Description" class="form-control" placeholder="Nhập mô tả sản phẩm" style="padding: 10px; border-radius: 5px; height: 100px;"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <div style="text-align: center; margin-top: 20px;">
            <input type="submit" value="Thêm sản phẩm" class="btn btn-primary" style="padding: 10px 30px; font-weight: bold; border-radius: 5px;" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
</style>
