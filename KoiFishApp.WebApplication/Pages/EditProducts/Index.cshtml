@page
@model KoiFishApp.WebApplication.Pages.QLGH.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align: center; font-size: 2.5rem; font-weight: bold; color: #333;">Danh sách sản phẩm</h1>

<p style="text-align: center;">
    <a asp-page="Create" class="btn btn-primary btn-lg" style="font-weight: bold; margin-top: 20px;">Thêm sản phẩm</a>
</p>

<table class="table table-striped table-bordered" style="width: 80%; margin: 20px auto; box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);">
    <thead class="thead-dark">
        <tr style="text-align: center;">
            <th>@Html.DisplayNameFor(model => model.Product[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Product[0].Description)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr style="text-align: center; vertical-align: middle;">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm" style="font-weight: bold;">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Tăng cường thẩm mỹ cho nút */
    .btn {
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            color: #fff;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #b52a37;
            color: #fff;
        }

    /* Tăng khoảng cách và kiểu dáng cho bảng */
    .table {
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #dee2e6;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
        text-transform: uppercase;
        font-size: 1rem;
    }

    /* Hiệu ứng hover cho các hàng */
    .table tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }
</style>
