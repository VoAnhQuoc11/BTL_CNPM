@page
@model KoiFishApp.WebApplication.Pages.CTKoiFish.CalculateFoodAmountModel

<h2>Calculate Food Amount</h2>

<form method="post">
    <div class="form-group">
        <label for="KoiFishId">Koi Fish ID:</label>
        <input type="number" class="form-control" id="KoiFishId" name="KoiFishId" asp-for="KoiFishId" required />
        <span asp-validation-for="KoiFishId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.FoodAmount > 0)
{
    <div class="alert alert-success mt-3">
        The amount of food needed for the koi fish is: @Model.FoodAmount kg/day
    </div>
}
