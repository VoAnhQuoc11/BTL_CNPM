@page
@model KoiFishApp.WebApplication.Pages.CTKoiFish.EditGrowthRecordModel


<link href="~/css/background.css" rel="stylesheet">
<h4>Edit Growth Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="KoiGrowth.KoiGrowthId" />

            <div class="form-group">
                <label asp-for="KoiGrowth.Date" class="control-label"></label>
                <input asp-for="KoiGrowth.Date" class="form-control" />
                <span asp-validation-for="KoiGrowth.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KoiGrowth.Size" class="control-label"></label>
                <input asp-for="KoiGrowth.Size" class="form-control" />
                <span asp-validation-for="KoiGrowth.Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KoiGrowth.Weight" class="control-label"></label>
                <input asp-for="KoiGrowth.Weight" class="form-control" />
                <span asp-validation-for="KoiGrowth.Weight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KoiGrowth.Age" class="control-label"></label>
                <input type="number" asp-for="KoiGrowth.Age" class="form-control" />
                <span asp-validation-for="KoiGrowth.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>

