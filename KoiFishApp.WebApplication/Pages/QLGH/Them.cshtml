@page
@model KoiFishApp.WebApplication.Pages.QLGH.ThemModel

@{
    ViewData["Title"] = "Them";
}
<link href="~/css/background.css" rel="stylesheet">
<h1 style="text-align: center; font-size: 2.5rem; font-weight: bold; color: #333;">Danh sách sản phẩm</h1>
<hr />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Bảng sản phẩm */
        .table {
            width: 90%;
            margin: 0 auto;
            border-collapse: collapse;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: #f8f9fa;
                color: #333;
                font-weight: bold;
                text-align: center;
                padding: 12px;
                border-bottom: 2px solid #dee2e6;
            }

            .table td {
                text-align: center;
                padding: 12px;
                border-bottom: 1px solid #dee2e6;
            }

            /* Hiệu ứng hover cho hàng trong bảng */
            .table tbody tr:hover {
                background-color: #f1f1f1;
            }

        /* Nút "Thêm vào giỏ" */
        .btn-primary {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            border-radius: 5px;
            padding: 8px 12px;
            text-align: center;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <form method="post" asp-page-handler="AddToCart">
                        <td>@product.Name <input type="hidden" name="ProductId" value="@product.ProductId" /></td>
                        <td>@product.Price</td>
                        <td>@product.Quantity</td>
                        <td>@product.Description</td>
                        <td>
                            <input type="submit" value="Thêm vào giỏ" class="btn btn-primary" />
                        </td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>