@page
@model MenuModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>KoiFishApp - Menu</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <!-- Liên kết đến file CSS -->
    <link href="~/css/menu.css" rel="stylesheet">
</head>
<body>
    <header>
            <div class="container">
            </div>
    </header>
    <div class="container">
        <h2>Menu</h2>
        <p>Chào mừng đến với KoiFishApp!</p>
        <div style="position: absolute; top: 10px; right: 10px;">
            <a class="dropdown-item logout-button" href="/Login/Login">Đăng xuất</a>
        </div>

        <div class="menu-buttons">
            <!-- Hàng 1: 3 nút -->
            <div class="row">
                <button class="button btn btn-primary" onclick="location.href='@Url.Page("/Account/Info")'">Cập nhật thông tin</button>
                <button class="button btn btn-success" onclick="location.href='@Url.Page("/QLGH/Index")'">Mua hàng</button>
                <button class="button btn btn-info" onclick="location.href='@Url.Page("/CTKoiFish/Index")'">Quản lý cá Koi</button>
            </div>

            <!-- Hàng 2: 3 nút -->
            <div class="row">
                <button class="button btn btn-secondary" onclick="location.href='@Url.Page("/Pond/Index")'">Quản lý hồ</button>
                <button class="button btn btn-warning" onclick="location.href='@Url.Page("/WaterParameters/Index")'">Quản lý thông số nước</button>
                <button class="button btn btn-danger" onclick="location.href='@Url.Page("/Dashboard/Index")'">Dashboard</button>
            </div>

            <!-- Hàng 3: Nút cuối cùng -->
            <div class="row">
                <button class="button btn btn-dark" onclick="location.href='@Url.Page("/Reports/Index")'">Report</button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
