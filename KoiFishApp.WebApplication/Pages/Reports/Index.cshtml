                <div id="waterQualityChart" style="height: 250px;"></div>
            </div>

            <!-- Sales Report Section -->
            <div class="section growth-section">
                <h3 class="growth-title text-center">Sales Report</h3>
                <div class="row justify-content-center mt-4">
                    <div class="col-md-3 report-card">
                        <p> Tổng doanh thu </p>
